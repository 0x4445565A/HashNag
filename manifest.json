{
  "manifest_version": 2,
  "name": "Hashnag",
  "version": "0.1",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.instagram.com/*",
        "https://twitter.com/*"
      ],
      "js": ["jquery-2.1.4.min.js", "hashnag.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_popup": "hashNagPopup.html"
  }
}
